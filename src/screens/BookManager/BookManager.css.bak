.book-item {
  padding: 5px 10px;
  border-bottom: 1px solid #bdbdbd;
  display: flex;
}

.book-item:first-child {
  border-top: 1px solid #bdbdbd;
  margin-top: 1px;
}

.book-item .book-cover {
  flex: 0;
  height: 125px;
  margin-right: 5px;
}

.book-item .book-info {
  flex: 1;
}

.book-item .book-info .book-title {
  font-size: 1.3rem;
  font-weight: 700;
}

.book-item .book-buttons {
  flex: 0;
}

.book-item .book-button {
  width: 25px;
  height: 25px;
  text-align: center;
}

.book-item .book-button i {
  line-height: 25px;
}
